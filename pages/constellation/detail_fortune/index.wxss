page {
  background: #fff;
}

.container-fortune {
  padding-bottom: 100rpx;
}
.section {
    width: 100%;
    height: 300rpx;
    position: relative;

    background: #f2fafc;
    padding: 20rpx 50rpx;
}

.section-left {
  width: 200rpx;
  height: 100%;
}
.section-right {
  width: 550rpx;
  height: 100%;
  padding-left: 50rpx;
}

.name-cn {
  color: #555;
  text-align: center;
  font-size: 32rpx;
}
.tro-title {
  color: #555;
  text-align: left;
  font-size: 30rpx;
  margin-bottom: 20rpx;
}
.tro-content {
  color: #555;
  text-align: left;
  font-size: 28rpx;
}

.picker-container {
  width: 120rpx;
  height: 50rpx;
  position: absolute;
  right: 10rpx;
  top: 20rpx;
}
.change_img {
    position: absolute;
    right: 50px;
    top: 8rpx;
    width: 15px;
    height: 16px;
}

.change_word {
    color: #555;
    font-size: 14px;
    position: absolute;
    right: 15px;
    top: 0;
}

.body-view {
    position: relative;
    background:#f2fafc;
    color: #fff;
    width:94%;
    margin:10px auto;
    padding:5px 10px;
    border-radius:6px;
}
.body-view text {
    color: #999;
}

.yh {
    height: 20px;
    width: 20px;
}

.yh2 {
    height: 20px;
    width: 20px;
    position: absolute;
    right: 10px;
}

.category {
    position: fixed;
    left: 0;
    bottom: -85rpx;
    background: #fff;
    box-shadow: 0 -2px 5px #e6e6e6;

    display: flex;
    flex-direction: row;
    justify-content: space-around;
    width: 100%;
    height: 85rpx;
    margin: 0 auto;
    font-size: 15px;
    color: #969a9d;
    z-index: 999;
    transition: all 1s;
}
.category.late-show {
  bottom: 0;
}
.category .tab-item {
    width: 150rpx;
    text-align: center;
    line-height: 80rpx;
    padding:0;
    border-radius:0;
    margin:0;
    background-color: #fff;
    font-size: 27rpx;
    color: #000;
}
.category .tab-item:active {
  background-color: #FFEAC3;
}

.cs {
    display: flex;
    flex-direction: row;
    flex-wrap: wrap;
    justify-content: space-between;
    text-align: center;
}

.img_star {
    display: flex;
    flex-direction: row;
    margin: 10px 0;
    font-size: 14px;
    text-align: center;
}
.img_star .star {
    margin-left: 5rpx;
}

.detail {
    margin: 8px 15px;
}

.detail_t {
    display: flex;
    flex-direction: row;
    justify-content: flex-start;
    height: 24px;
}

.detail_title {
    font-family: Microsoft YaHei;
    font-size: 14px;
    margin: 0 5px;
    padding-top: 2px;
}

.detail_val {
    margin: 15px 0;
    font-size: 14px;
    color: #4c4c4c;
    line-height: 1.7em;
}

.content {
    padding-bottom: 5px;
}

.dp {
    width: 95%;
    margin: 0 auto;
    margin-bottom: 20px;
    margin-top: 10px;
    color: #4c4c4c;
    font-size: 14px;
    padding-left: 15px;
}

.riqi {
    width:100%;
    height:30px;
    margin-top:10px;
    line-height:30px;
    text-align:center;
    color:#000;
    font-size:17px;
}

.leo-btn {}
.leo-btn .search-all {
  width: 20rpx;
  height: 20rpx;
  padding:25rpx;
  margin: 25rpx 40rpx 25rpx 25rpx;
}
.leo-btn .look-all {
  width: 20rpx;
  height: 20rpx;
  padding:25rpx;
  margin:25rpx;
}

.index_share {
  position: fixed;
  right: 20rpx;
  bottom: 105rpx;
  width: 80rpx;
  height: 80rpx;
  background: #B8E986;
  border-radius: 50%;
  box-shadow: 0 0 30px 0 #fff;
  z-index:1000;
}
.index_share button {
  width: 50rpx;
  height: 50rpx;
  background: #B8E986;
  border-radius: 50%;
  border: 0;
}
.index_share button::after {
  border: 0;
}