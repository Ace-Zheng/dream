@import "../../../app.wxss";

page {
  background: #FFEAC3;
}
.bg5 {
    height: auto;
    background-size: cover;
}

.fortune {
    text-align: center;
    background: #fff;
    padding: 0 0 30rpx 0;
}

.fortune_box {
    background-size: cover;
    padding: 0 0 50rpx 0;
}

.fortune .li {
    display: inline-block;
    width: 165rpx;
    height: 200rpx;
    margin: 15rpx 10rpx 0;
    text-align: center;
    font-weight: bold;
}

.fortune .li .li_img {
    height: 150rpx;
    width: 150rpx;
}

.fortune .li .name {
    margin-top: -13rpx;
    font-size: 30rpx;
    color: #000;
}

.fortune .li .date {
    font-size: 26rpx;
    color: #000;
    margin-top: -2px;
}

.mini {
    bottom: -175rpx;
}

.fortune_box .xingzuo-compute {
  position: relative;
  width: 710rpx;
  height: 100rpx;
  background: #fff;
  color: #000;
  margin: 20rpx auto 20rpx;
  box-shadow:0 0 20px 0 #f71;
  border-radius: 10rpx;
}
.fortune_box .xingzuo-compute .title {
  font-size: 35rpx;
  margin-left: 40rpx;
}
.fortune_box .xingzuo-compute .more {
  width: 45rpx;
  height: 45rpx;
  margin-right: 20rpx;
}
.fortune_box .xingzuo-compute .new {
  position: absolute;
  width: 60rpx;
  height: 60rpx;
  top: 0;
  left: 0
}

.fortune_box .xingzuo-fenxi {
  box-sizing: border-box;
  width: 100%;
  height: 480rpx;
  background: #fff;
  margin-bottom: 20rpx;
  border: 10rpx solid #fff;
}
.fortune_box .xingzuo-fenxi .title {
  font-size: 40rpx;
  margin-bottom: 50rpx;
  color: #fff;
}

.fortune_box .xingzuo-fenxi-1 {
  background: url('https://tpdoc.cn/uploads/dream/xingzuo/index/fenxi-1.png') no-repeat center / cover;
}
.fortune_box .xingzuo-fenxi-2 {
  background: url('https://tpdoc.cn/uploads/dream/xingzuo/index/fenxi-2.png') no-repeat center / cover;
}

@media screen and (min-height:700px) {
    .fortune .li {
        margin: 15rpx 5rpx 0;
    }
}