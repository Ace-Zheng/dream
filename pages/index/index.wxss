.page {
  padding: 0 0 30rpx 0;
}

.page .title {
  width: 100%;
  height: 80rpx;
}

.page .title .title-name {
  font-size: 32rpx;
  margin: 0 20rpx;
}
.page .title .line {
  width: 100rpx;
  height: 5rpx;
  background: #000;
}

.page .content > view {
  margin-bottom: 10rpx;
}

.page image {
  width: 350rpx;
  height: 222rpx;
  box-shadow: 0 0 0 7rpx #fff;
}

.page .guishen {
  position: relative;
  width: 350rpx;
  height: 457rpx;
}
.page .guishen image {
  width: 100%;
  height: 100%;
}

.page .imagePar {
  position: relative;
}
.page .imagePar .cover {
  position: absolute;
  width: 100%;
  height: 100%;
  top: 0;
  left: 0;
  background: rgba(0, 0, 0, 0.5);
  border-radius: 0;
}
.page .imagePar .cover .lock {
  position: absolute;
  width: 30rpx;
  height: 30rpx;
  top: 10rpx;
  left: 310rpx;
  box-shadow: none;
}
.page .imagePar .cover .text {
  position: absolute;
  width: 80rpx;
  height: 74rpx;
  top: 50%;
  left: 50%;
  margin-top: -37rpx;
  margin-left: -40rpx;
  box-shadow: none;
}

.page .qingai {
  width: 350rpx;
  height: 490rpx;
}
.page .qingai image {
  width: 100%;
  height: 100%;
}

.page .type-item {
  width: 100%;
}
.page .type-item.second {
  width: 100%;
  margin-bottom: 20rpx;
}

.page .type-item .guishen-par {
  width: 350rpx;
  height: 457rpx;
}
.page .type-item .guishen-par > view {
  width: 100%;
  height: 220rpx;
}
.page .type-item .guishen-par > view image {
  width: 100%;
  height: 100%;
}

.page .type-item .qingai-par {
  width: 350rpx;
  height: 490rpx;
}
.page .type-item .qingai-par > view {
  width: 100%;
  height: 235rpx;
}
.page .type-item .qingai-par > view image {
  width: 100%;
  height: 100%;
}

.page .type-item > view:first-child {
  margin-right: 20rpx;
}


.getAuth {
  position: fixed;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
  width: 100%;
  height: 100%;
  opacity: 0;
  z-index: 999;
}

.index_share {
  position: fixed;
  right: 20rpx;
  bottom: 20rpx;
  width: 80rpx;
  height: 80rpx;
  background: #B8E986;
  border-radius: 50%;
  box-shadow: 0 0 30px 0 #000;
  z-index:1000;
}
.index_share button {
  width: 50rpx;
  height: 50rpx;
  background: #B8E986;
  border-radius: 50%;
  border: 0;
}
.index_share button::after {
  border: 0;
}