}

.container input::placeholder {
  color: white;
  opacity: 0.5;
  font-weight: bolder;
}

.getAuth {
  position: fixed;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
  width: 100%;
  height: 100%;
  opacity: 0;
  z-index: 999;
}

.index_share {
